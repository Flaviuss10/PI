<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="erp.ui.StocksController">

    <top>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Selectează tipul de stoc" BorderPane.alignment="CENTER" />
    </top>


    <center>
        <HBox alignment="CENTER" spacing="80">

            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imgMateriiPrime" fitHeight="300" fitWidth="300" preserveRatio="true" VBox.vgrow="ALWAYS" />
                <Button fx:id="btnMateriiPrime" onAction="#handleMateriiPrime" text="Materii Prime" />
            </VBox>


            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imgProduseFinite" fitHeight="210" fitWidth="210" preserveRatio="true" VBox.vgrow="ALWAYS" />
                <Button fx:id="btnProduseFinite" onAction="#handleProduseFinite" text="Produse Finite" />
            </VBox>
        </HBox>
    </center>


    <bottom>
        <HBox alignment="BOTTOM_LEFT">
            <Button onAction="#handleGoBack" style="-fx-font-size: 12px; -fx-background-color: #dddddd;" text="⮐ Înapoi" />
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="20" left="40" right="40" top="40" />
    </padding>
</BorderPane>
