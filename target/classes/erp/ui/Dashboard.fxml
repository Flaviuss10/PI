<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="30" style="-fx-padding: 30; -fx-background-color: #F9FAFB;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="erp.ui.DashboardController">


    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="ERP Dashboard" />


    <HBox spacing="20">

        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #ccc, 5, 0, 0, 2);">
            <Label style="-fx-font-size: 16;" text="Total Comenzi" />
            <Label fx:id="labelTotalOrders" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="125" />
        </VBox>


        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #ccc, 5, 0, 0, 2);">
            <Label style="-fx-font-size: 16;" text="Comenzi în Așteptare" />
            <Label fx:id="labelPendingOrders" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="8" />
        </VBox>


        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #ccc, 5, 0, 0, 2);">
            <Label style="-fx-font-size: 16;" text="Comenzi Finalizate" />
            <ProgressBar fx:id="finishedOrderProgressBar" prefWidth="120" progress="0.75" />
            <Label fx:id="labelFinishedOrderPercentage" style="-fx-font-size: 14;" text="75%" />
        </VBox>


        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #ccc, 5, 0, 0, 2);">
            <Label style="-fx-font-size: 16;" text="Stocuri Critice" />
            <Label fx:id="labelCriticalStocks" style="-fx-font-size: 18px; -fx-text-fill: #D9534F;" text="5 produse" />
        </VBox>
    </HBox>


    <VBox spacing="10">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ultimele Comenzi" />
        <TableView fx:id="tableRecentOrders" prefHeight="300">
            <columns>
                <TableColumn fx:id="colOrderId" prefWidth="100" text="ID" />
                <TableColumn fx:id="colClient" prefWidth="200" text="Client" />
                <TableColumn fx:id="colProduse" prefWidth="150" text="Produse" />
                <TableColumn fx:id="colStatus" prefWidth="150" text="Status" />
            </columns>
        </TableView>
    </VBox>
   <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" text="⤶ Înapoi" />

</VBox>
